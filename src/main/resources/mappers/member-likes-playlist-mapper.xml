<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studyveloper.overtheflow.mapper.MemberLikesPlaylistMapper">
	<insert id="addMemberLikesPlaylist" parameterType="LikeVO">
		INSERT INTO
			member_likes_playlist (member_id, playlist_id)
		VALUES(#{memberId}, #{id})
	</insert>
	
	<delete id="deleteMemberLikesPlaylist" parameterType="LikeVO">
		DELETE FROM member_likes_playlist
		WHERE 
			member_id = #{memberId}
		AND 
			playlist_id = #{id}
	</delete>
	
	<select id="searchMemberIds" parameterType="String" resultType="String">
		SELECT
			member_id 
		FROM
			member_likes_playlist
		WHERE
			playlist_id = #{playlistId}
	</select>
	
	<select id="searchPlaylistIds" parameterType="String" resultType="String">
		SELECT
			playlist_id 
		FROM
			member_likes_playlist
		WHERE
			member_id = #{memberId}
	</select>
</mapper>