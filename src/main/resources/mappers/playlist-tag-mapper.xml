<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studyveloper.overtheflow.mapper.PlaylistTagMapper">
	<resultMap id="playlistTag" type="TagVO">
		<result property="tagName" column="playlist_tag_contents"/>
		<result property="id" column="playlist_id"/>
	</resultMap>
	
	<insert id="addPlaylistTag" parameterType="TagVO">
		INSERT INTO
			playlist_tag (playlist_id, playlist_tag_contents)
		VALUES
			(#{id}, #{tagName})
	</insert>
	
	<delete id="deletePlaylistTag" parameterType="String">
		DELETE FROM
			playlist_tag
		WHERE
			playlist_id = #{playlistId}
	</delete>
	
	<select id="searchPlaylistIds" parameterType="String" resultType="String">
		SELECT playlist_id
		FROM playlist_tag
		WHERE
			playlist_tag_contents = #{tagName}
	</select>
	
	<select id="searchTagNames" parameterType="String" resultType="String">
		SELECT
			playlist_tag_contents
		FROM
			playlist_tag
		WHERE
			playlist_id = #{playlistId}
	</select>
</mapper>